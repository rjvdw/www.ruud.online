	"license": "MIT",
	"private": true,
	"scripts": {
		"build": "eleventy",
		"start": "eleventy --serve",
		"test": "jest",
		"prepare": "husky install",
		"check:prettier": "prettier . --check .",
		"check:eslint": "eslint .",
