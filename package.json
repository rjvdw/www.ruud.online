		"eslint-plugin-import": "^2.28.0",
		"html-minifier": "^4.0.0",
		"husky": "^8.0.3",
		"jest": "^29.6.2",
		"jest-serializer-html": "^7.1.0",
		"markdown-it": "^13.0.1",
		"prettier": "^3.0.1",
		"sass": "^1.64.2",
		"stylelint": "^15.10.2",
		"stylelint-config-recess-order": "^4.3.0",
		"stylelint-config-standard-scss": "^10.0.0"
	},
	"jest": {
		"snapshotSerializers": [
			"jest-serializer-html"
		]
	}
