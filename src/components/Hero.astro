---
type Props = {
  picture?: {
    src: string
    alt: string
  }
}

const { picture } = Astro.props
---

<header>
  <div class="container">
    <slot />
    {picture && <img class="picture" src={picture.src} alt={picture.alt} />}
  </div>
</header>

<style>
  header {
    padding-block: 1rem 5rem;
    padding-inline: 0;
    margin-block: 0 2.5rem;
    margin-inline: 0;

    font-size: 1.5rem;
    color: var(--hero-foreground-color, var(--theme-foreground-color-2));
    background-color: var(--hero-background-color, var(--theme-color-2));
    background-image: var(--hero-background-image);
    background-repeat: var(--hero-background-repeat, no-repeat);
    background-position: var(--hero-background-position, 0 0);
  }

  @media (width >= 45rem) {
    header {
      padding-block-start: 3rem;
    }
  }

  .container {
    position: relative;
    inline-size: calc(100% - 1rem);
    max-inline-size: var(--page-max-inline-size);
    padding: 0 0.5rem;
    margin: 0 auto;
  }

  @media (width >= 35rem) {
    .container {
      padding-block: 0;
      padding-inline: 3rem;
    }
  }

  @media (width >= 45rem) {
    .container {
      padding-block: 0rem;
      padding-inline: 5rem;
    }
  }

  .picture {
    position: absolute;
    inset-block-end: -8rem;
    inset-inline-end: 1rem;
    inline-size: 7.5rem;
    block-size: 7.5rem;
    clip-path: circle(50% at center);
  }
</style>
